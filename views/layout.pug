doctype html
html
  head
      block head
        title="Pot Overflow"
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel='stylesheet' href='/stylesheets/index.css')
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css")
        meta(property='og:title' content='Pot-Overflow')
        meta(property='og:description' content='The answers to all of your burning, cooking questions!')
        meta(property='og:image' content='../pot-overflow.gif')
  body
    div(id="navContainer")
      nav(id="nav-bar")
        a(href="/"): img(src="/images/logo.png" height="50px" width="50px")
        div(id="home")
          a(href='/'): button(id="homeButton" class="navButton"): i.fas.fa-home.fa-lg
          a(href="/questions"): button(id="questions-button" class="navButton") Questions
        div(id="searchContainer")
          form(method="post" action="/search")
            label(for="searchBar")
            input(type="text" placeholder="Search..." id="searchBar" name="searchBar")
            button(type="submit" id="searchButton" class="navButton"): i.fa.fa-search.fa-lg
        div(id="login")
          if locals.authenticated
              form(action="/logout" method="post")
                button(id="logoutbutton" class="navButton") Log out
              a(href='/profile'): button(id="logo" class="navButton"): i.fas.fa-user.fa-lg
              a(href="/questions/ask"): button(id="askQuestionButton" class="navButton") Ask a Question!
          else
              a(href="/login"): button(id="loginButton" class="navButton") Log in
              a(href="/register"): button(id="registerButton" class="navButton") Register
              form(action="/demo" method="post")
                button(id="demoButton" class="navButton") Demo
  div(id="page-content")
    block content
